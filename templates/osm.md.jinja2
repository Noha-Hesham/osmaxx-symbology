{% macro tag_combinations(osm_tag_combinations) -%}
    {% set or_sep = joiner(' or ') -%}
    {%- for tag_combination in osm_tag_combinations -%}
        {{- or_sep() -}}
        {%- set and_sep = joiner('+') -%}
        {%- for key, value in tag_combination|dictsort_unless_ordered -%}
            {{- and_sep() -}}
            {%- if value == '__ABSENT__' -%}
                <code>{{ key }}<strong>&ne;\*</strong></code>
            {%- else -%}
                `{{ key }}={{ value }}`
            {%- endif -%}
        {%- endfor -%}
    {%- endfor %}
{%- endmacro %}
